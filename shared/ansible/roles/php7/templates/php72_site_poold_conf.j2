[{{ web_username}}]
user = {{ web_username }}
group = {{ web_group }}
listen = {{ php72_socket_dir }}{{ php72_socket_file }}
listen.owner = {{ php72_nginx_user }}
listen.group = {{ php72_nginx_group }}
listen.mode = 0660
pm = dynamic
pm.max_children = 75
pm.start_servers = 8
pm.min_spare_servers = 5
pm.max_spare_servers = 20
pm.max_requests = 500

php_admin_value[upload_max_filesize] = 25M
php_admin_value[error_log] = /home/{{ web_username}}/logs/php72-php-fpm_error.log
php_admin_value[open_basedir] = /home/{{ web_username}}:/tmp
